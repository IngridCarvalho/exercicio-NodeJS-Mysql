<%- contentFor('body') %>

  <h2>Incluir Movimento</h2>
  <div class="form-group">
    <label>Descrição:</label>
    <input type="text" name="description" class="form-control" value="">
  </div>
  <div class="form-group">
    <label>Data Documento:</label>
    <input type="date" name="date" class="form-control" value="">
  </div>
  <div class="form-group">
    <label>Tipo:</label>
      <select name="type" id="type" class="form-control">
          <option value="revenue">Receita</option>
          <option value="expense">Despesa</option>
      </select>
  </div>
  <div class="form-group">
    <label>Categoria:</label>
      <select name="type" id="type" class="form-control">
        <!-- Aqui terá um for dos registros do bd -->
      </select>
  </div>
  <div class="form-group">
    <label>Conta:</label>
      <select name="type" id="type" class="form-control">
        <!-- Aqui terá um for dos registros do bd -->
      </select>
  </div>
  <div class="form-group">
    <label>Valor:</label>
    <input type="number" name="value" class="form-control" value="">
  </div>
  <button class="btn btn-success" type="submit">Salvar</button>
  </form>
  <br><br>
  <% if (data) { %>
    <h3>Movimentos</h3>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <td>ID</td>
          <td>Descrição</td>
          <td>Data</td>
          <td>Tipo</td>
          <td>Ações</td>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= data[i].id %></td>
            <td><%= data[i].description %></td>
            <td><%= data[i].date_movement %></td>
            <td><%= data[i].type %></td>
            <td class="text-center">
              <a href="/edit-movement/<%= data[i].id %>" class="btn btn-info">Editar</a>
              <a href="/delete-movement/<%= data[i].id %>" class="btn btn-danger">Remover</a>
            </td>
          </tr>
        <% } %>
     </tbody>
    </table>
   <% } %>
